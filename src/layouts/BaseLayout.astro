---
const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body style="margin:0;">
    <header style="background:#f6f8fa; border-bottom:1px solid #e1e4e8; padding:12px 16px;">
      <nav style="display:flex; gap:12px; align-items:center; max-width:960px; margin:0 auto;">
        <strong>{title}</strong>
        <a href="/" style="color:#0366d6; text-decoration:none;">トップ</a>
        <a href="/visitor" style="color:#0366d6; text-decoration:none;">来場者</a>
        <a href="/staff" style="color:#0366d6; text-decoration:none;">スタッフ</a>
      </nav>
    </header>
    <main style="max-width:960px; margin:0 auto; padding:16px;">
      <slot />
    </main>
  </body>
</html>
