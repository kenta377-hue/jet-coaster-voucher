rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /slots/{slotId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.token.staff == true;
      allow create: if false;
      allow delete: if false;
    }

    match /tickets/{ticketId} {
      allow create: if false;
      allow read: if request.auth != null && (request.auth.token.staff == true || request.auth.uid == resource.data.ownerUid);
      allow update: if request.auth != null && request.auth.token.staff == true;
      allow delete: if false;
    }

    match /calls/{callId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.staff == true;
    }

    match /auditLogs/{logId} {
      allow read: if false;
      allow write: if request.auth != null && request.auth.token.staff == true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
